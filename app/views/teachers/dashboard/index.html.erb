<h1>TEACHERS DASHBOARD</h1>
<p>Welcome <%= current_teacher.email %>!</p>

<div>
  <%= button_to "Log out", destroy_teacher_session_path, method: :delete %>
</div>
<div>
  <%= link_to "Edit profile", edit_teacher_registration_path %>
</div>

<div class="my-2 border-2">
  All teachers:
  <ul>
    <% @teachers.each do |teacher| %>
      <li><%= teacher.email %></li>
    <% end %>
  </ul>
</div>

<div class="my-2 border-2">
  All students:
  <ul>
    <% @all_students.each do |student| %>
      <li><%= student.email %></li>
    <% end %>
  </ul>
</div>

<div class="my-2 border-2">
  Your students:
  <ul>
    <% @students.each do |student| %>
      <li><%= student.email %></li>
    <% end %>
  </ul>
</div>
