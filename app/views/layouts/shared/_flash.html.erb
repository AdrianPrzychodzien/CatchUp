<% flash = notice || alert%>
<% is_notice = notice.present? %>

<% if flash %>
    <div 
        data-controller="flash" 
        data-flash-target="message" 
        class="z-10 inline-flex border <%= is_notice ? "bg-green-100 border-green-400 text-green-700" : "bg-red-100 border-red-400 text-red-700"%> px-4 py-3 rounded fixed bottom-8 left-8"
    >
        <%= flash %>

        <svg data-action="click->flash#close" class="fill-current h-6 w-6 <%= is_notice ? "text-green-500" : "text-red-500"%>" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
        </svg>
    </div>
<% end %>
