<%= simple_form_for [:teacher, @invitation], data: {turbo: false}, :html=> { class: 'px-6 py-12' } do |f| %>
    <%= f.error_notification %>
    <%= f.input :email %>
    <%= f.input :group_id, as: :select, collection: @current_teacher.groups.map {|s| [s.name, s.id]} %>
    <%= f.button :submit %>  
<% end %>
