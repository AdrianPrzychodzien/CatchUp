<%= simple_form_for [:teacher, @group], data: {turbo: false}, :html=> { class: 'px-6 py-12' } do |f| %>
    <%= f.error_notification %>
    <%= f.input :language, as: :select, collection: Group.languages.keys %>
    <%= f.input :level, as: :select, collection: Group.levels.keys %>
    <%= f.input :student_ids, as: :select, collection: @group.teacher.students.map {|s| [s.email, s.id]}, input_html: { multiple: true } %>
    <%= f.button :submit %>  
<% end %>
